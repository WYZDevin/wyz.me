---
import { HandWaving } from '@/components/icons/HandWaving'
import BentoBadge from '../BentoBadge'

interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<div class:list={['relative flex h-full flex-col justify-between p-6', className]}>
  <!-- Badge -->
  <div class='mb-6'>
    <BentoBadge
      icon={HandWaving}
      text='About me'
      className={{ component: 'w-fit' }}
    />
  </div>

  <!-- Content -->
  <div class='flex-1 space-y-6'>
    <!-- Main intro -->
    <div class='space-y-4'>
      <h2 class='text-2xl font-semibold leading-tight text-theme-primary'>
        Hi, I'm Devin
      </h2>
      <div class='prose space-y-3'>
        <p class='text-base leading-relaxed text-theme-secondary'>
          PhD student exploring GeoAI at University of Toronto, passionate about turning complex spatial data into meaningful insights.
        </p>
        <p class='text-sm leading-relaxed text-theme-secondary/80'>
          When I'm not diving into research, I'm building full-stack applications that bridge the gap between academic innovation and real-world solutions.
        </p>
      </div>
    </div>

    <!-- Quick stats/highlights -->
    <div class='grid grid-cols-2 gap-4 pt-4'>
      <div class='space-y-1'>
        <div class='text-lg font-semibold text-theme-primary'>PhD Student</div>
        <div class='text-xs text-theme-secondary'>University of Toronto</div>
      </div>
      <div class='space-y-1'>
        <div class='text-lg font-semibold text-theme-primary'>Research Focus</div>
        <div class='text-xs text-theme-secondary'>Spatial Intelligence</div>
        <div class='text-xs text-theme-secondary'>Spatial Modeling</div>
        <div class='text-xs text-theme-secondary'>GeoAI</div>
        <div class='text-xs text-theme-secondary'>Noise Pollution</div>
      </div>
      <div class='space-y-1'>
        <div class='text-lg font-semibold text-theme-primary'>Other Than Research......</div>
        <div class='text-xs text-theme-secondary'>I am a Full Stack Developer!</div>
      </div>
      <!-- <div class='space-y-1'>
        <div class='text-lg font-semibold text-theme-primary'>Open to</div>
        <div class='text-xs text-theme-secondary'>Collaborations</div>
      </div> -->
    </div>
  </div>

  <!-- Subtle background decoration -->
  <div class='absolute -right-4 -top-4 h-24 w-24 rounded-full bg-gradient-to-br from-primary-400/10 to-primary-600/5 blur-xl'></div>
  <div class='absolute -bottom-6 -left-2 h-16 w-16 rounded-full bg-gradient-to-tr from-emerald-400/10 to-emerald-600/5 blur-lg'></div>
</div>