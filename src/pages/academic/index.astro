---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { mainWebsite } from '@/lib/structuredData'

import BentoSection from './_components/BentoSection.astro'
import Decorator from './_components/Decorator.astro'
import HeroSection from './_components/HeroSection.astro'
import PublicationSection from './_components/PublicationSection.astro'
import WorkSection from './_components/WorkSection.astro'
---

<BaseLayout>
  <Decorator slot='decorator' />
  <script
    is:inline
    type='application/ld+json'
    set:html={JSON.stringify(mainWebsite)}
    slot='head'
  />
  <HeroSection />
   
  <BentoSection />
  <!-- <PublicationSection />
  <WorkSection /> -->
</BaseLayout>

<style>
  .leaflet-container {
    width: 100%;
    height: 100vh;
  }
</style>
